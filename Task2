#include <iostream>
#include <string>
using namespace std;

class Employee {
private:
    string name;
    int id;
    double salary;

public:
    Employee(string n, int i, double s) {
        name = n;
        id = i;
        salary = s;
    }

    Employee() {
        name = "";
        id = 0;
        salary = 0.0;
    }

    virtual double getSalary() {
        return salary;
    }

    string getName() { return name; }
    int getId() { return id; }
};

class Manager : public Employee {
private:
    string department;

public:
    Manager(string n, int i, double s, string d) : Employee(n, i, s), department(d) {}

    double getSalary() override {
        return Employee::getSalary() * 1.1;
    }

    string getDepartment() { return department; }
};

int main() {
    Employee* employees[4];
    
    employees[0] = new Employee("Работник 1", 101, 50000);
    employees[1] = new Employee("Работник 2", 102, 55000);
    employees[2] = new Manager("Менеджер 1", 103, 70000, "IT");
    employees[3] = new Manager("Менеджер 2", 104, 75000, "HR");
    
    for(int i = 0; i < 4; i++) {
        cout << employees[i]->getSalary() << endl;
    }
    
    for(int i = 0; i < 4; i++) {
        delete employees[i];
    }
    
    return 0;
}
